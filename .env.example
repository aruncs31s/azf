# AZF Authorization Framework - Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# Environment
# =============================================================================
ENVIRONMENT=development
# Options: development, staging, production

# =============================================================================
# JWT Configuration (REQUIRED)
# =============================================================================
# JWT_SECRET must be at least 32 characters. 64+ characters recommended.
# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-that-is-at-least-32-characters-long

# Token expiry durations (optional, defaults shown)
# JWT_ACCESS_EXPIRY=15m
# JWT_REFRESH_EXPIRY=168h
# JWT_ISSUER=azf

# =============================================================================
# Database Configuration
# =============================================================================
DB_DRIVER=sqlite
DB_DSN=tmp/AZF_auth_z.db

# Connection pool settings (optional, defaults shown)
# DB_MAX_IDLE_CONNS=10
# DB_MAX_OPEN_CONNS=100
# DB_CONN_MAX_LIFETIME=1h
# DB_CONN_MAX_IDLE_TIME=30m

# =============================================================================
# Server Configuration
# =============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
BASE_URL=http://localhost:8080

# Timeout settings (optional)
# SERVER_READ_TIMEOUT=30s
# SERVER_WRITE_TIMEOUT=30s
# SERVER_SHUTDOWN_TIMEOUT=10s

# CORS settings - comma-separated origins
# In production, set specific origins instead of *
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=10
RATE_LIMIT_BURST=20

# Redis rate limiting (optional)
# RATE_LIMIT_USE_REDIS=false
# REDIS_URL=redis://localhost:6379

# =============================================================================
# Casbin Configuration
# =============================================================================
# CASBIN_MODEL=config/casbin_rbac_model.conf
# CASBIN_POLICY=config/casbin_rbac_policy.csv

# =============================================================================
# OAuth Configuration (Optional)
# =============================================================================
# Google OAuth
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# Logging
# =============================================================================
# LOG_LEVEL=info
# Options: debug, info, warn, error

# =============================================================================
# Admin UI
# =============================================================================
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=changeme
